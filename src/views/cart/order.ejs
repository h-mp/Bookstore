<h1>Order Details</h1>

<div class="order-details">
  <h2>Invoice for Order no.</h2>
  <div class="shipping-info">
    <p>Name: </p>
    <p>Address: </p>
    <p></p>
    <p>Email: </p>
  </div>

  <h2>Books</h2>
    <table class="table">
      <tr class="title-row">
        <th>ISBN</th>
        <th>Title</th>
        <th>Price $</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
      <% cartItems.forEach(function(item) { %>
        <tr class="book-row">
          <td><%= item.isbn %></td>
          <td><%= item.title %></td>
          <td><%= item.price %> $</td>
          <td><%= item.qty %></td>
          <td><%= item.total %> $</td>
        </tr>
      <% }) %>
    </table>

    <p id="grandTotal">Order Total: <%= grandTotal %> $</p>
</div>