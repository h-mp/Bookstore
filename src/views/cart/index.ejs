<h1>Shopping Cart</h1>

<% if (cartItems && typeof cartItems !== 'undefined' && cartItems.length > 0) { %>
  <table class="table">
    <tr>
      <th>ISBN</th>
      <th>Title</th>
      <th>Price $</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
    <% cartItems.forEach(function(item) { %>
      <tr>
        <td><%= item.isbn %></td>
        <td><%= item.title %></td>
        <td><%= item.price %> $</td>
        <td><%= item.qty %></td>
        <td><%= item.total %> $</td>
      </tr>
    <% }) %>
  </table>

  <p>Total: <%= grandTotal %> $</p>

  <button class="button">Checkout</button>

<% } else { %>
  <p>Your cart is empty.</p>
<% } %>